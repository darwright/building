<h1>New Project</h1>
<br />


<%= form_tag(projects_url, method: 'post') do %>


  <div>
    <%= label_tag :description %>
    <%= text_area_tag :description %>
  </div>

  <br />
    <div>
    <%= label_tag :responsible %>
    <%= text_field_tag :responsible %>
  </div>
  <br />
    <div>
    <%= label_tag :priority %>
    <%= text_field_tag :priority %>
  </div>
    <br />
    <div>
    <%= label_tag :status %>
    <%= text_field_tag :status %>
  </div>
  <br />
    <div>
    <%= label_tag :due_date %>
    <%= text_field_tag :due_date %>
  </div>
  <br />
    <div>
    <%= label_tag :reminder %>
    <%= text_field_tag :reminder %>
  </div>
  <br />

  <div>
    <%= submit_tag "Create Project", class: 'btn btn-primary' %>

  <td><a class="btn btn-inverse btn-small" href="/projects">Cancel</a></td>


  </div>
<% end %>
